{
  "git": {
    "tagName": "v${version}",
    "requireCleanWorkingDir": false
  },
  "hooks": {
    "after:init": [
      "npm run test"
    ],
    "after:bump": [
      "npm run build"
    ]
  },
  "npm": {
    "publish": true,
    "token": "${NPM_TOKEN}"
  },
  "github": {
    "release": true
  }
}